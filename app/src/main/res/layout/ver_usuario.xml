<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF"
    android:backgroundTint="@color/teal_200"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postCellPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Celular"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad de Residencia"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postFavoriteStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IA Favorita"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postfavoriteNature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿Como te ayuda la IA?"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_editar"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@color/blue"
            android:padding="5dp"
            android:src="@drawable/icon_edit" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4" />

        <ImageView
            android:id="@+id/btn_eliminar"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@color/red"
            android:padding="5dp"
            android:src="@drawable/icon_delete" />

    </LinearLayout>
</androidx.cardview.widget.CardView>